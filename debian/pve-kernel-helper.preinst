#! /bin/sh

set -e

case "$1" in
    install|upgrade)
        if dpkg --compare-versions "$2" lt "6.4-1~"; then
            dpkg-divert --package pve-kernel-helper --add --rename \
                --divert /usr/sbin/grub-install.real /usr/sbin/grub-install
        fi
    ;;
    *)
        echo "ignoring unknown preinst command '$1'"
    ;;
esac

#DEBHELPER#

exit 0
